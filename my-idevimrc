set nocompatible 
syntax enable
syntax on 
set number 
set relativenumber 
set t_Co=256 

set tabstop=4 
set shiftwidth=4 
set expandtab 

set autoindent 
set ruler 
set backspace=2 
set history=1000 

set hlsearch 
set incsearch 

set cursorline 
